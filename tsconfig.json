{
	"compileOnSave": true,
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "CommonJS",
		"target": "ESNext",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"strict": true,
		"outDir": "build",
		"resolveJsonModule": true,
		"sourceMap": false,
		"inlineSourceMap": true,
		"incremental": true,
		"lib": ["ESNext", "ESNext.Array", "ESNext.AsyncIterable", "ESNext.Intl"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
